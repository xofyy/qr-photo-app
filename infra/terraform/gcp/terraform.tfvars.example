# terraform.tfvars.example (GCP)
# Aşağıdaki değerleri kendi ortamınıza göre düzenleyin ve dosyayı terraform.tfvars
# olarak kopyalayın. Yorumlar her parametrenin ne işe yaradığını anlatır.

project_id = "my-gcp-project"   # Zorunlu: gcloud config get-value project çıktısı ile eşleşmeli.
region     = "europe-west1"     # Opsiyonel: Cloud Run bölgesi (örn. "us-central1").

# GitHub tetikleyicisi için kimlik bilgileri; Cloud Build bu repo ve branch'i izler.
github_owner  = "my-github-org"  # Zorunlu: GitHub organizasyonu/kullanıcı adı.
github_repo   = "qr-photo-app"   # Zorunlu: Bağlanılacak repository adı.
github_branch = "^main$"        # Opsiyonel: Regex formatında branch filtresi (örn. "^release/.*$").

# Plain env değişkenleri state dosyasına düz metin olarak yazılır; kritik olmayan değerleri girin.
run_service_env_vars = {
  "DJANGO_SETTINGS_MODULE" = "backend.settings"
}

# Secret Manager'a eklenecek sır örneği; production için gerçek değerle değiştirin.
# Map boş bırakılırsa ({}), secret oluşturulmaz.
run_service_secret_values = {
  "qr-photo-secret-key" = "replace-me"
}
